<% stylesheet 'admin' %>

<div class="uk-height-viewport uk-responsive-width uk-margin-large">
<h1 class="uk-h1">SVIE-be jelentkezett felhasználók</h1>
<div class="uk-container-center uk-panel uk-panel-box uk-width-1-1">

  <div class="uk-grid uk-width-1-2 uk-container-center uk-grid-small">
    <% @not_svie_members.each do |user| %>
      <div class="dark uk-width-1-1 uk-panel uk-panel-box uk-margin-top-remove uk-grid uk-margin-bottom">
        <div class="uk-width-1-3">
          <%= link_to user.full_name, profile_path(user.screen_name),
            class: "uk-text-primary" %>
        </div>
        <div class="uk-width-1-3">
          <%= user.svie_state %>
        </div>
        <div class="uk-width-1-3">
          <%= button_to "Elfogadás", svie_approve_path(user.id), method: :post,
            class: "uk-button uk-button-success", remote: false %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
