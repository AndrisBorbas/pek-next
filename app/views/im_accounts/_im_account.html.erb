<div id="im_account_<%= im_account.id %>">

  <%= form_for im_account, :remote => true, html: {class: 'uk-form'} do |f| %>
    <div class="uk-grid uk-grid-small uk-margin">

      <div class="uk-width-2-10">
        <%= f.select :protocol,
             options_for_select(Rails.configuration.x.im_accounts.invert, im_account.protocol), {}, { :class => 'uk-select uk-width-1-1' } %>
      </div>

      <div class="uk-width-5-10">
        <%= f.text_field :name, class: "uk-input uk-width-1-1" %>
      </div>

      <div class="uk-width-3-10">
        <div class="uk-grid">
          <div class="uk-width-1-2">
            <%= f.submit "Mentés", class: "uk-button" %>
          </div>

          <div class="uk-width-1-2">
            <%= link_to "Törlés", im_account_path(im_account.id),
                    method: :delete, class: "uk-button uk-button-danger", remote: true, data: {confirm: 'Biztosan törlöd?'} %>
          </div>
        </div>
      </div>

    </div>
  <% end %>

</div>