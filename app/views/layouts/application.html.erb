<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>PekNext</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= render 'favicon' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>

<body class="uk-height-1-1">

  <%= render 'navbar' %>

  <% if flash.alert %>
    <script>
      UIkit.notify("<%= flash.alert %>", {status:'danger'});
    </script>
  <% end %>

  <% if flash.notice %>
    <script>
      UIkit.notify("<%= flash.notice %>", {status:'success'});
    </script>
  <% end %>

  <div class="uk-container uk-container-center uk-padding-remove uk-margin-top uk-margin-small-bottom page-wrap" id="content-container">
    <%= yield %>
  </div>

  <%= render 'footer' %>

</body>

</html>
