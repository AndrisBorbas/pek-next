<div id="content-main" class="profile-container">
  <div class="uk-height-viewport uk-responsive-width uk-margin-large">
    <div class="uk-container-center">
      <div class="uk-panel uk-panel-box">
        <div class="uk-grid">
          <div class="uk-width-1-3">
          <%= image_tag photo_path(@user_presenter.screen_name), class: "uk-thumbnail", alt: @user_presenter.full_name, id: 'profile-picture' %>
          </div>
          <div class="uk-width-2-3">
            <h1 class="uk-h1 uk-text-bold">
              <%= @user_presenter.full_name %>
            </h1>
            <h3 class="uk-h3">
              <%= @user_presenter.nickname %>
            </h3>
            <hr>
            <%= @user_presenter.room %>
            <%= @user_presenter.cell_phone %>
            <%= @user_presenter.email %>
            <hr>
          </div>
        </div>

        <ul class="uk-tab" data-uk-tab="{connect:'#profile-data'}">
          <li>
            <button class="uk-button" href="">Tagságok</button>
          </li>
          <li>
            <button class="uk-button" href="">Történet</button>
          </li>
        </ul>

        <ul id="profile-data" class="uk-switcher">
          <li>
            <% own_memberships do |membership| %>
            <div class="profile-membership">
              <div class="profile-membership-name">
                <%= link_to membership.group_name, group_path(membership.group_id), class: 'dark-text' %>
              </div>
              <div class="profile-membership-post dark-text">
                <%= membership.posts %>
              </div>
              <div class="profile-membership-start dark-text">
                <%= membership.membership_timer %>
              </div>
            </div>
            <% end %>
          </li>
          <li>
            <% years_with_points(@user_presenter.pointrequests) do |year| %>
              <div class="uk-accordion" data-uk-accordion="{collapse:true, showfirst:false}">
                <h3 class="uk-accordion-title"><%= year.to_readable %></h3>
                <div class="uk-accordion-content">
                  <table class="profile-history uk-table uk-table-striped white-bg">
                    <tbody>
                      <% user_detailed_point_history(@user_presenter.pointrequests, year) do |point_history| %>
                        <tr>
                          <td><%= link_to point_history.group_name, group_path(point_history.group_id) %></td>
                          <td><%= point_history.point %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% end %>
          </li>
        </ul>

      </div>
    </div>
  </div>
</div>
