<% if list? %>

  <ul class="uk-list uk-list-striped uk-margin-large-bottom uk-width-1-1">
    <% own_memberships do |membership| %>
      <li class="uk-padding-small uk-clearfix">
          <div class="uk-padding-remove uk-float-left uk-width-medium-1-3">
            <%= link_to membership.group_name, group_path(membership.group_id) %>
          </div>
          <div class="uk-text-bold uk-float-left"><%= membership.posts %></div>
          <div class="uk-text-bold uk-float-right uk-margin-right uk-width" style="width: 180px"><%= membership.membership_time %></div>
      </li>
    <% end %>
  </ul>

<% else %>

  <div class="uk-grid uk-width-1-1 uk-margin-large-bottom" id="active_users_grid" data-uk-grid="{gutter: 20}">
    <% own_memberships do |membership| %>
      <div class="uk-width-1-1 uk-width-medium-1-3">
        <div class="uk-panel uk-panel-box dark">

          <div class="uk-panel-title uk-margin-remove uk-clearfix">
            <div class="uk-padding-remove uk-float-left">
              <%= link_to membership.group_name, group_path(membership.group_id) %>
            </div>
          </div>

          <div class="uk-panel-body uk-padding-remove uk-text-bold">
            <div><%= membership.posts %></div>
            <div class="uk-clearfix uk-margin-small-bottom">
              <div class="uk-float-right">
                <%= membership.membership_time %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% end %>
