<div class="uk-width-medium-1-2 uk-container-center uk-overflow-container">
    <%= form_for(@group) do |f| %>
        <%= render 'form_errors', errors: f.object.errors %>

        <table class="uk-table uk-table-striped uk-table-hover">
          <tr>
            <td><%= f.label :name, class: "form-label-required" %></td>
            <td><%= f.text_field :name, required: true %></td>
          </tr>

          <tr>
            <td><%= f.label :description %></td>
            <td><%= f.text_field :description %></td>
          </tr>

          <tr>
            <td><%= f.label :webpage %></td>
            <td><%= f.text_field :webpage %></td>
          </tr>

          <tr>
            <td><%= f.label :founded %></td>
            <td><%= f.text_field :founded %></td>
          </tr>

          <tr>
            <td><%= f.label :maillist %></td>
            <td><%= f.text_field :maillist %>
            </td>
          </tr>

          <tr>
            <td><%= f.label :users_can_apply %></td>
            <td><%= f.check_box :users_can_apply %></td>
          </tr>
        </table>

        <div class="uk-text-center">
            <div class="inline-block">
                <input class="uk-button uk-button-success" type="submit" value="Módosítás" name="submitButton"/>
            </div>
        </div>
    <% end %>
</div>
