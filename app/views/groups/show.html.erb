<div class="uk-height-viewport uk-responsive-width">
  <div class="uk-container-center">
    <div class="uk-panel uk-panel-box">
      <h3 class="uk-panel-title"><%= @group.name %></h3>
      <h2 class="uk-h2">Kör adatai</h2>
      <table>
        <tbody>
          <tr>
            <th class="group-attr">Név</th>
            <td><%= @group.name %></td>
          </tr>
          <tr>
            <th class="group-attr">Alapítási éve</th>
            <td><%= @group.founded %></td>
          </tr>
          <tr>
            <th class="group-attr">Svie tag</th>
            <td><%= @group.issvie ? "Igen" : "Nem" %></td>
          </tr>
          <tr>
            <th class="group-attr">Weboldal</th>
            <td><%= @group.webpage %></td>
          </tr>
          <tr>
            <th class="group-attr">Levelezőlista</th>
            <td><%= @group.maillist %></td>
          </tr>
          <tr>
            <th class="group-attr">Bemutatkozás</th>
            <td><%= @group.description %></td>
          </tr>
        </tbody>
      </table>
      <% if @group.users_can_apply && !@is_member %>
        <%= form_tag group_membership_index_path(@group), {method: 'post'} do %>
          <%= button_tag "Jelentkezés körbe", {class: "uk-button uk-button-primary"} %>
        <% end %>
      <% end %>
      <h2 class="uk-h2">Aktív tagok</h2>
      <% if @is_leader %>
        <form action="/groups/inactivate/<%= @group.id %>" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <% end %>
      <table class="uk-table uk-table-striped uk-table-hover">
        <thead>
          <tr>
            <th>Felhasználó neve</th>
            <th>Becenév</th>
            <th>Betöltött poszt</th>
            <th>Tagság kezdete</th>
            <% if @is_leader %>
              <th>Módosítás</th>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @members.each_with_index do |m, id| %>
          <tr>
            <td><%= m.lastname %> <%= m.firstname %></td>
            <td><%= m.nickname %></td>
            <td>
              <% @posts[id].each_with_index do |p, p_index| %>
                <%= p.pttip_name %><%= p_index == @posts[id].length - 1 ? '' : ',' %>
              <% end %>
            </td>
            <td><%= @memberships[id].membership_start %></td>
            <% if @is_leader %>
              <td>
                <%= link_to  "Módosítás", edit_group_membership_path(@group, m), class: "uk-button uk-button-small uk-button-primary" %>
              </td>
              <td>
                <input type="checkbox" name="<%= 'check-' + @memberships[id].id.to_s %>">
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% if @is_leader %>
        <%= submit_tag "Kijelöltek öregtaggá avatása", {class: "uk-button uk-button-primary"} %>
        <%= submit_tag "Kijelöltek törlése", {class: "uk-button uk-button-danger"} %>
      </form>
      <% end %>
    </div>
  </div>
</div>
