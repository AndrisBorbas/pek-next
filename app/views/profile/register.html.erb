<div class="uk-height-1-1">
    <div class="uk-vertical-align uk-text-center uk-height-1-1">
        <div class="uk-vertical-align-middle" style="width: 250px;">
            <div class="uk-panel uk-panel-box rounded-border">
                <h2>Regisztráció</h2>

                <%= form_tag('/auth/register') do %>
                    <div class="uk-form-row">
                        <%= text_field_tag :username, nil, :required => true, class: "uk-width-1-1 uk-form-large", placeholder: "Felhasználónév" %>
                    </div>
                    <div class="uk-form-row">
                        <%= label_tag :dormitory, "Kollégium", class: "uk-form-label" %>
                        <%= select_tag :dormitory, options_from_collection_for_select(@dorms, "to_s", "to_s", ""), :include_blank => true, class: "uk-width-1-1 uk-form-large uk-form-controls", placeholder: "Kollégium" %>
                    </div>
                    <div class="uk-form-row">
                         <%= number_field(:room, nil, class: "uk-width-1-1 uk-form-large", placeholder: "Szobaszám") %>
                    </div>
                    <div class="uk-form-row">
                        <%= submit_tag("Mehet!", class: "uk-width-1-1 uk-button uk-button-primary uk-button-large") %>
                    </div>
                <% end %>

            </div>
        </div>
    </div>
</div>
