<form>
<%=form_tag() do%>
  <table class="uk-table uk-table-striped uk-table-hover">
    <tr>
        <td><label for="id40">Vezetéknév *</label></td>
        <td>
            <%=text_field_tag "lastName", @user.lastname, class:"class", maxlength:40 %>
        </td>
    </tr>
    <tr>
        <td><label for="id41">Keresztnév *</label></td>
        <td>
            <%=text_field_tag "firstName", @user.firstname, class:"class", maxlength:40 %>
        </td>
    </tr>
    <tr>
        <td><label for="id42">Becenév</label></td>
        <td>
            <%=text_field_tag "nickname", @user.nickname, class:"class", maxlength:40 %>
        </td>
    </tr>
    <tr class="gender_line">
        <td><label for="id43">Nem</label></td>
        <td>
            <%=select_tag(:gender, options_for_select(
              [
                ['n/a', "UNKNOWN"],
                ['férfi', "MALE"],
                ['nő', "FEMALE"],
                ['nem megadott', "NOTSPECIFIED"]
              ], selected: @user.gender), { :class => 'gender_radios', :name => 'gender', :id => 'id43'} )
            %>
        </td>
    </tr>
    <tr>
        <td><label for="id44">Születési dátum</label></td>
        <td>
            <%=text_field_tag( "dateOfBirth",@user.date_of_birth, class:"class", maxlength:40) %>
            <a class="lockLink" id="id3d" href="./edit?9-2.ILinkListener-personFormPanel-personForm-dateOfBirthAttributeLink"><img alt="" class="lock" id="id45" src="../wicket/resource/hu.sch.web.wicket.components.customlinks.AttributeAjaxFallbackLink/resources/public-ver-C241A6A691EA12AD4181AEE3FB823C
        49.gif" title="Elrejt"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id46">Cím</label></td>
        <td>
            <%=text_field_tag "homeAddress",@user.home_address, class:"class" %>
            <a class="lockLink" id="id3b" href="./edit?9-2.ILinkListener-personFormPanel-personForm-homePostalAddressAttributeLink"><img alt="" class="lock" id="id47" src="pic-location" title="Mutat"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id48">E-mail *</label></td>
        <td>
            <%=text_field_tag( "emailAddress", @user.email, class:"class") %>
            <a class="lockLink" id="id38" href="./edit?9-2.ILinkListener-personFormPanel-personForm-mailAttributeLink"><img alt="" class="lock" id="id49" src="dunno" title="Elrejt"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id4a">Mobil</label></td>
        <td>
            <%=text_field_tag( "cellPhone",@user.cell_phone, class:"class") %>
            <a class="lockLink" id="id39" href="./edit?9-2.ILinkListener-personFormPanel-personForm-mobileAttributeLink"><img alt="" class="lock" id="id4b" src="dunno" title="Elrejt"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id4c">Weboldal</label></td>
        <td>
            <%=text_field_tag("webpage",@user.webpage, class:"class") %>
            <a class="lockLink" id="id3c" href="./edit?9-2.ILinkListener-personFormPanel-personForm-webpageAttributeLink"><img alt="" class="lock" id="id4d" src="dunno" title="Elrejt"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id4e">Kollégium</label></td>
        <td>
            <%=select_tag(:dormitory, options_for_select(
              [
                ['Nem megadott', ""],
                ['Schönherz', "Schönherz"],
                ['Tétény', "Tétény"],
                ['Kármán', "Kármán"],
                ['Vásárhelyi', "Vásárhelyi"],
                # jelenleg nincs külsős lehetőség
                ['Külsős', "Külsős"]
              ], selected: @user.dormitory), { :name => 'dormitory', :id => 'id4e'} )
            %>
            <a class="lockLink" id="id3a" href="./edit?9-2.ILinkListener-personFormPanel-personForm-roomNumberAttributeLink"><img alt="" class="lock" id="id4f" src="../wicket/resource/hu.sch.web.wicket.components.customlinks.AttributeAjaxFallbackLink/resources/public-ver-C241A6A691EA12AD4181AEE3FB823C49.gif" title="Elrejt"/></a>
        </td>
        </tr>
        <tr>
            <td><label for="id50">Szobaszám</label></td>
            <td>
                <%=text_field_tag("room",@user.room, class:"class") %>
            </td>
        </tr>
    </table>
    <table id="id51">
        <tr>
            <td><label>IM</label></td>
            <td>
                <table>

                    <tr>
                        <td colspan="2"><input type="submit" class="btn" value="Új" name="rowPanel:imAdd" id="id36"/></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td><label>Neptun</label></td>
            <td><span><%= @user.neptun%> /span></td>
        </tr>
    </table>
    <span id="btns"><input class="btn" type="submit" value="Módosítás" name="submitButton" id="id3f"/></span>
<% end %>
<%= form_tag({action: :settings}, multipart: true) do %>
    <table>
        <tr>
            <% if @raw_photo %>
                <div id="cropper-container">
                    <img src="<%= root_path + "uploads/" + @raw_photo %>" id="cropper-img">
                </div>
                <button class="uk-button-primary" onclick="cropDone">Mehet!</button>
            <% end %>
        </tr>
        <tr>
            <td><label>Fotó</label></td>
            <td>
                <%= file_field_tag 'rawPhoto' %>
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="Feltöltés"></td>
        </tr>
    </table>
<% end %>
