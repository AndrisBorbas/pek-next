        </td>
    </tr>
    <tr>  
        <td><label for="id46">Cím</label></td>
        <td>
            <%=text_field_tag :homeAddress,@user.home_address, class:"class" %>
            <a class="lockLink" id="id3b" href=""><img alt="" class="lock" id="id47" src="pic-location" title="Mutat"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id48">E-mail *</label></td>
        <td>
            <%=text_field_tag( :emailAddress, @user.email, class:"class") %>
            <a class="lockLink" id="id38" href=""><img alt="" class="lock" id="id49" src="dunno" title="Elrejt"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id4a">Mobil</label></td>
        <td>
            <%=text_field_tag( :cellPhone,@user.cell_phone, class:"class") %>
            <a class="lockLink" id="id39" href=""><img alt="" class="lock" id="id4b" src="dunno" title="Elrejt"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id4c">Weboldal</label></td>
        <td>
            <%=text_field_tag(:webpage,@user.webpage, class:"class") %>
            <a class="lockLink" id="id3c" href=""><img alt="" class="lock" id="id4d" src="dunno" title="Elrejt"/></a>
        </td>
    </tr>
    <tr>
        <td><label for="id4e">Kollégium</label></td>
        <td><select name="dormitory" id="id4e">
                <option selected="selected" value=""></option>
                <option value="0">Schönherz</option>
                <option value="1">Tétény</option>
                <option value="2">Kármán</option>
                <option value="3">Vásárhelyi</option>
            </select><a class="lockLink" id="id3a" href=""><img alt="" class="lock" id="id4f" src="" title="Elrejt"/></a>
        </td>
        </tr>
        <tr>
            <td><label for="id50">Szobaszám</label></td>
            <td>
                <%=text_field_tag( :room,@user.room, class:"class") %>
            </td>
        </tr>
    </table>
    <table id="id51">
        <tr>
            <td><label>IM</label></td>
            <td>
                <table>
                    
                    <tr>
                        <td colspan="2"><input type="submit" class="btn" value="Új" name="rowPanel:imAdd" id="id36"/>Eh, ezt itt implementálni kell</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td><label>Fotó</label></td>
            <td><img id="id52" src=""/><a style="position: relative; top: -5px;" class="photoRemoveLink" id="id37" href="">Fotó eltávolítása</a><input style="display: block;" class="textinput" type="file" name="fileInput"/></td>
        </tr>
        <tr>
            <td><label>Neptun</label></td>
            <td><span><%= @user.neptun%> </span></td>
        </tr>
    </table>
    <span id="btns"><input class="btn" type="submit" value="Módosítás" name="submitButton" id="id3f"/></span>
